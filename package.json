{
  "name": "wistful",
  "version": "0.0.4",
  "description": "A tool for making Winston logs print better. Parses JSON and formats it for the console.",
  "main": "dist/index.js",
  "repository": "git@github.com:ChrisCarleton/wistful.git",
  "author": "Chris Carleton",
  "keywords": [
    "winston",
    "formatting",
    "pretty-print",
    "pipe",
    "pretty",
    "logging",
    "logs"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "format": "prettier --write --ignore-unknown '**/*'",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "husky install",
    "test": "jest"
  },
  "bin": {
    "wistful": "dist/index.js"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-junit": "^15.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.0",
    "winston": "^3.8.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
